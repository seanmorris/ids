#!/bin/bash

set -eu;

export $(make env | tr '\n' ' ');

[[ "$TARGET" == "dev" ]] ||  set -eux;

PHP_ERROR=0;

git diff-index HEAD \
	| grep ".php"   \
	| grep "^:"     \
	| sed 's:.* [UAM][ \\''t]*\([^ \\''t]*\):\1:g' \
	| while read FILE; do \
		test -f $FILE || continue;
		echo Checking $FILE...;
		echo -ne "\t";
		php -l $FILE 2>&1;
		PHP_ERROR=$?;
	done;

set -eu;

[[ 0 -ne $PHP_ERROR ]] \
	&& echo Please correct the above errors before committing.;

exit $PHP_ERROR;
