#!/bin/bash

echo "PHP will now lint all the php staged files..."

phpLintErrors=0

for stagedFile in $stagedFiles; do
	res=`php -l $stagedFile 2>&1 | grep 'PHP Parse error:'`
	echo "$stagedFile, $res"
	if [ -n "$res" ]; then
		phpLintErrors=1
	fi
done

if [ -n "$phpLintErrors" ]; then
	exit $phpLintErrors
fi

make TARGET=dev

make test

make TARGET=base
